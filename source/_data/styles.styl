/* force dark mode */
:root
  --body-bg-color: #000
  --content-bg-color: #333
  --card-bg-color: #555
  --text-color: #ccc
  --blockquote-color: #bbb
  --link-color: #ccc
  --link-hover-color: #eee
  --brand-color: #ddd
  --brand-hover-color: #ddd
  --table-row-odd-bg-color: #282828
  --table-row-hover-bg-color: #363636
  --menu-item-bg-color: #555
  --theme-color: #222
  --btn-default-bg: #222
  --btn-default-color: #ccc
  --btn-default-border-color: #555
  --btn-default-hover-bg: #666
  --btn-default-hover-color: #ccc
  --btn-default-hover-border-color: #666
  --highlight-background: #1e1e1e
  --highlight-foreground: #dcdcdc
  --highlight-gutter-background: #313131
  --highlight-gutter-foreground: #c9c9c9
  color-scheme: dark
  
  img
    opacity: 0.75

  img:hover
    opacity: 0.9

  iframe
    color-scheme: light


/* header */

.header-inner
  padding-top: 70px

.custom-logo-image
  background: none
  margin: 0 auto
  max-width: 300px

  +tablet-mobile()
	  display: block

  &:hover
      cursor: pointer


.site-title, .site-subtitle
  display: none


/* sidebar */

$sidebar-bg-color           = #0b0b0b
$sidebar-bg-color-hover     = #171717
$sidebar-color              = #b4b4b4
$sidebar-list-border-color  = #1f1f1f
$sidebar-list-height        = 2.8em

.sidebar
  background: $sidebar-bg-color

.sidebar-toggle
  background: none
  height: 22px
  width: 18px

.site-author-name
  font-size: 1.3em
  cursor: pointer

.site-state-wrap
  margin-bottom: 10px

.new-category-list
  padding-inline-start: 35px    
  padding-inline-end: 10px    
  cursor: pointer    

  li
    list-style-type: none    
    text-align: left    
    line-height: $sidebar-list-height  
    border-bottom: 1px solid $sidebar-list-border-color

    button
      float: right    
      border: none    
      height: $sidebar-list-height
      width: $sidebar-list-height     
      background: none    
      color: $sidebar-color    
      cursor: pointer    

.new-category-list-link
  border-bottom: none      
  color: $sidebar-color !important    

  span
    font-size: .8em    
    color: #4e4e4e    

.child-category-list
  padding-inline-start: 0
  padding-inline-end: 0
  border-top: 1px solid $sidebar-list-border-color

  li
    padding-inline-start: 0    
    border: none    

    i
      color: $sidebar-color   
      font-size: .9em    
      padding-inline-end: 10px    

.new-category-list-container
  display: flex    
  align-items: center    
  
  img
    margin-left: 0

  &:hover
    background: $sidebar-bg-color-hover
    
.last-index-list-item
  border-bottom: 0 !important    

.social-icon
  display: inline    
  height: 13px    
  width: 13px    
  margin-right: 5px    
  border-radius: 3.5px     

.sidebar-active
  padding-left: 0

$search-button-color				= #181818;

.search-button
  background-color: $search-button-color
  border: 1px solid $search-button-color !important
  border-radius: 5px
  margin-inline-start: 35px
  margin-inline-end: 10px
  height: $sidebar-list-height - 0.1em
  display: flex
  align-items: center
  padding-inline-start: 15px
  margin-top: 70px
  margin-bottom: 20px

.site-state-wrap, .site-author
  display: none

.search-popup
  background-color: $search-button-color

.search-result-container
  background-color: $search-button-color

  hr
    background-image: none

.search-popup p.search-result 
  border-bottom: 0

.search-input
  color: $search-button-color

// collapsible wrapper
// https://stackoverflow.com/questions/3508605/how-can-i-transition-height-0-to-height-auto-using-css
.collapsible-wrapper
  display: flex    
  overflow: hidden    

  &:after
    content: ''    
    height: 50px    
    transition: height 0.2s linear, max-height 0s 0.2s linear    
    max-height: 0px    

.collapsible
  transition: margin-bottom 0.2s cubic-bezier(0, 0, 0, 1)    
  margin-bottom: 0    
  max-height: 1000000px    
  width: 100%    

.collapsible-wrapper.collapsed > .collapsible
  margin-bottom: -2000px    
  transition: margin-bottom 0.2s cubic-bezier(1, 0, 1, 1),
              visibility 0s 0.2s, max-height 0s 0.2s    
  visibility: hidden    
  max-height: 0    

.collapsible-wrapper.collapsed:after
  height: 0    
  transition: height 0.2s linear    
  max-height: 50px    


/* body */

body
  line-height: 1.75    

.main-inner
  margin-top: -30px

.sidebar-dimmer
  background: black
  display: block
  height: 100%
  left: 0
  opacity: 0
  position: fixed
  top: 0
  transition: visibility .4s, opacity .4s
  visibility: hidden
  width: 100%
  z-index: $zindex-1

  .sidebar-active &
    opacity: .6
    visibility: visible


/* header */

.site-nav, .site-nav-right, .site-nav-toggle
  display: none


/* posts */

.posts-expand .post-title
  font-weight: bold    

.post-meta-item time
  border: 0 !important    

.post-meta-item span a
  border: 0 !important    

.post-meta-item-icon, .post-meta-item-text
  display: none    

.post-meta-item:nth-of-type(2)
  display: none

.post-body
  line-height: 1.8

  h1, h2, h3, h4, h5, h6
    margin: 40px 0 10px

  pre
    tab-size: 4
    padding-top: 15px !important
    padding-bottom: 15px !important

  code
    background: none
    color: #59ca87

@css {
	.post-body h2 + h3 {
		margin-top: 0px;
	}
}

.post-body ul
  margin-block-start: 0.5em
  margin-block-end: 0.5em
  padding-inline-start: 20px

.post-body ul li ul
  margin-block-start: 0 !important
  margin-block-end: 0.2em !important

.post-body li p
  margin-bottom: 0

.post-nav
  margin-top: 3em

.post-body blockquote
  background-color: #0e0e0e
  border-left: 0
  padding: 18px 18px 18px 44px
  margin-bottom: 20px

.post-body blockquote:before
  position: absolute
  content: "\f10d"
  font: var(--fa-font-solid)
  font-size: 1.1em
  margin-top: 4px
  margin-left: -27px
  color: #555 !important

.post-body blockquote p:last-of-type
  margin-bottom: 0

.hljs-comment, .hljs-quote
  font-style: normal

:root img
  opacity: 1

// markdown-it-link-preview
// https://github.com/junkawa/markdown-it-link-preview

.link-preview-widget
  display: table
  width: 100%
  background: #181818

  &:hover
    filter: brightness(1.1)

.link-preview-widget-title
  font-size: 1.2em
  font-weight: 700
  display: -webkit-box
  overflow: hidden
  margin-bottom: 4px
  word-break: break-all
  -webkit-box-orient: vertical
  -webkit-line-clamp: 2

.link-preview-widget-description
  font-size: 0.9em
  font-style: normal
  line-height: 1.5
  display: -webkit-box
  overflow: hidden
  max-height: 3em
  margin-bottom: 4px
  word-break: break-all
  color: #787c7b
  -webkit-box-orient: vertical
  -webkit-line-clamp: 2

.link-preview-widget-url
  font-size: 0.8em
  font-style: normal
  line-height: 1.5
  display: block
  margin-top: 7px
  margin-bottom: 0
  color: #6c6f6e

.link-preview-widget > a
  display: table-cell
  flex-direction: column
  padding: 16px
  cursor: pointer
  border: 0
  vertical-align: middle
  text-decoration: none
  color: inherit
  background-color: transparent
  -webkit-box-orient: vertical
  -webkit-box-direction: normal
  -webkit-box-flex: 1
  flex: 1

.link-preview-widget-image
  width: 25%
  height: 150px
  padding: 0
  vertical-align: middle
  background-repeat: no-repeat
  background-position: 50%
  background-size: cover
  -webkit-box-flex: 0
  flex: 0
  
  +mobile()
    width: 40%


/* pages */

.category .collection-header small
  display: none


/* comments */

$gitalk-color					= #ccc
$gitalk-textarea-color			= #181818

.gt-container
  a
    color: $gitalk-color !important

  .gt-link-counts
    border-bottom: 1px solid $gitalk-color !important

  .gt-svg svg
    fill: $gitalk-color !important

  .gt-header-textarea, .gt-header-preview
    background-color: $gitalk-textarea-color !important
    color: $gitalk-color !important
    font-family: Pretendard !important

  .gt-btn
    background-color: $gitalk-textarea-color !important
    color: $gitalk-color !important

  .gt-btn-login, .gt-btn-public
    border: 1px solid $gitalk-textarea-color !important

  .gt-btn-preview
    background-color: $gitalk-color !important
    border: 1px solid $gitalk-color !important
    color: $gitalk-textarea-color !important

    &:hover
      background-color: #aaa !important

  .gt-comment-content
    background-color: $gitalk-textarea-color !important
    border: 1px solid $gitalk-textarea-color !important
    border-radius: 5px !important
    
	&:hover
      -webkit-box-shadow: none !important
      -moz-box-shadow: none !important
      box-shadow: none !important

.gt-container .gt-comments .gt-comment-body
  color: $gitalk-color !important
  font-family: Pretendard !important


/* frontpage */

.frontpage-slider
  flex-direction: row
  flex-wrap: wrap
  height: 65vh
  margin-top: -70px

.frontpage-slider > h1, .frontpage-slider > p
  display: flex
  align-items: center
  flex-direction: column
  width: 100%
  margin: 0 !important

.frontpage-slider > h1
  justify-content: end
  font-size: 2.2em
  color: white;
  padding-bottom: 2px
  letter-spacing: 0.1rem

  +mobile()
    font-size: 1.8em

.frontpage-slider > p
  color: rgba(255, 255, 255, 0.7)
  justify-content: start
  font-weight: bold
  font-size: 1em

  +mobile()
    font-size: 0.9em

.frontpage-background
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  z-index: -5
  background: 50% 50%/cover no-repeat
  background-image: url("/images/frontpage/background.jpg")


/* footer */

footer
  position: sticky
  top: 100vh